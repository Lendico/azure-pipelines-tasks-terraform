{
  "name": "azure-pipelines-tasks-terraform-display",
  "version": "0.1.0",
  "description": "Azure Pipelines task to display terraform plans",
  "main": ".bin/index.js",
  "scripts": {
    "build": "tsc --build",
    "test": "cucumber-js -p default",
    "test:coverage": "nyc -r cobertura -r html \"cucumber-js\" \"-p\" \"default\"",
    "test:report": "mkdir -p .tests && cucumber-js -p report | grep -Ev '^##vso|^\\[command]|^[a-zA-Z0-9]' | cucumber-junit > ./.tests/results.xml",
    "start": "ts-node --require dotenv/config ./src/index.ts",
    "pack": "copyfiles package.json task.json icon.png \".bin/*.js\" \".bin/**/*.js\" -e \".bin/tests/*\" .dist && cd .dist && npm install --only=prod",
    "upload": "tfx build tasks upload --task-path .dist",
    "delete": "tfx build tasks delete --task-id 58d5194a-3b96-11eb-adc1-0242ac120002"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charleszipp/azure-pipelines-tasks-terraform.git"
  },
  "keywords": [
    "terraform",
    "azure-devops",
    "vsts"
  ],
  "author": "Alex Goncharov, Charles Zipp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/charleszipp/azure-pipelines-tasks-terraform/issues"
  },
  "homepage": "https://github.com/charleszipp/azure-pipelines-tasks-terraform#readme",
  "devDependencies": {
    "@types/cucumber": "^6.0.1",
    "@types/intercept-stdout": "^0.1.0",
    "@types/mocha": "^5.2.6",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^10.12.27",
    "@types/q": "^1.5.1",
    "braces": "^2.3.2",
    "copyfiles": "^2.2.0",
    "cpx": "^1.5.0",
    "cucumber": "^6.0.5",
    "cucumber-junit": "^1.7.1",
    "cucumber-pretty": "^6.0.0",
    "cucumber-tsflow": "^3.4.1",
    "mocha": "^7.1.2",
    "mocha-junit-reporter": "^1.18.0",
    "mock-require": "^3.0.3",
    "nyc": "^15.0.0",
    "tfx-cli": "^0.8.3",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/chai": "^4.2.14",
    "applicationinsights": "^1.4.0",
    "azure-devops-node-api": "^7.0.0",
    "azure-pipelines-task-lib": "^3.0.6-preview.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "intercept-stdout": "^0.1.2",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13"
  }
}
